<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jks.project">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DateActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/DateTitle" />
        <activity
            android:name=".WeatherActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan"

            android:label="@string/WeatherTitle" />
        <activity
            android:name=".PersonalActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/PersonalTitle" />
        <activity
            android:name=".StyleActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="스타일 추천"/>
    </application>

</manifest>